<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="Stylesheet" href="/css/styles.css">
    <title>Document</title>
</head>
<body>
    <%- include('layouts/header')  %>
    <h1>All Users page</h1>

    <div class="container mt-4 p-4 main-div">
        <div class="row">
            <div class="col-md-10">
                <table class="table main-table">
                    <thead>
                      <tr>
                        <th scope="col">User</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                        <th scope="col">City</th>
                        <th scope="col">Post Code</th>
                        <th scope="col">Delete</th>
                        <th scope="col">Update</th>
                      </tr>
                    </thead>
                    <tbody>
            
                        <% for(let i=0;i<data.length;i++){%>
                            <tr>
                                <td>
                                    <div class="">
                                        <img src=<%= '/images/'+data[i].image %> alt="Could not load" width="100px">
                                        <span><%= data[i].fullname %></span>
                                    </div>
                                </td>
                                <td><%= data[i].email %></td>
                                <td><%= data[i].phone %></td>
                                <td><%= data[i].city %></td>
                                <td><%= data[i].zip %></td> 
                                <td>
                                    <a href=<%= "/api/deleteUser?id="+data[i]._id %> class="button-anchor2">Delete</a>
                                </td>
                                <td>
                                    <a href=<%= "/api/displayUpdatePage?id="+data[i]._id %> class="button-anchor">Update</a>
                                </td>
                            </tr>
                            <% } %>
            
                    </tbody>
                  </table>
            </div>
        </div>
    </div>

</body>
</html>